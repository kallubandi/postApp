<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:visibility="visible">

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginStart="55dp"
        android:background="#e7e9e9" />

    <ImageView
        android:id="@+id/powered_by_google_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bg_gradient" />

    <RelativeLayout
        android:id="@+id/rl_error"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="#fafafa"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_error_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="36dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="36dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Location not found"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_error_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_error_title"
            android:layout_gravity="center"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Try searching for a more generalized address"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_error_desc"
            android:layout_gravity="center"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="E.g. - search “20 L Cross, koramangala” instead of “House 4, 1st Floor, 20 L Cross, koramangala”  "
            android:textColor="#9b9b9b"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>
